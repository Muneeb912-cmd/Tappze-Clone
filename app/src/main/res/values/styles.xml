<?xml version="1.0" encoding="utf-8"?><!-- res/values/styles.xml -->
<resources>
    <!-- Custom style for TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="hintTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="endIconTint">@android:color/black</item>
    </style>

    <!-- Custom style for Exposed Dropdown Menu -->
    <style name="CustomExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@android:color/black</item>

        <item name="boxStrokeWidth">2dp</item> <!-- Optional: Customize the stroke width -->
        <item name="endIconTint">@android:color/black
        </item> <!-- Ensures the end icon remains black -->
    </style>
    <!-- res/values/styles.xml -->
    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize the background color of the dialog -->
        <item name="android:colorAccent">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AppTheme.Alert.Button.Positive
        </item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppTheme.Alert.Button.Negative
        </item>

    </style>

    <style name="AppTheme.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet_background</item>
    </style>


</resources>
